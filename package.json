{
  "name": "slate-react-editor",
  "version": "0.1.0",
  "description": "A production-quality React rich-text editor component library built on Slate.js with code block support",
  "type": "module",
  "packageManager": "pnpm@10.6.1",
  "main": "./dist/slate-react-editor.js",
  "module": "./dist/slate-react-editor.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/slate-react-editor.js"
    },
    "./style.css": "./dist/slate-react-editor.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc -p tsconfig.build.json && vite build",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "lint": "tsc --noEmit"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0",
    "slate": ">=0.112.0",
    "slate-react": ">=0.112.0",
    "slate-history": ">=0.110.0"
  },
  "dependencies": {
    "prismjs": "^1.29.0"
  },
  "devDependencies": {
    "@types/prismjs": "^1.26.4",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "slate": ">=0.112.0",
    "slate-history": ">=0.110.0",
    "slate-react": ">=0.112.0",
    "typescript": "^5.5.0",
    "vite": "^7.0.0",
    "vite-plugin-dts": "^4.3.0",
    "vitest": "^3.0.0",
    "prettier": "^3.3.0"
  }
}
